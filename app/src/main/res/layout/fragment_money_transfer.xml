<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.money_transfer">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/bkt2"
            android:layout_marginTop="10dp"
            android:text="Transfer Money"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:text="Username or Mobile number"/>
        <EditText
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/add_money_btn_design"
            android:layout_marginTop="10dp"
            android:hint="Enter username or mobile number"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:text="Amount"/>
        <EditText
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@drawable/add_money_btn_design"
            android:layout_marginTop="10dp"
            android:hint="Enter Amount"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Submit"
            android:textAllCaps="true"
            android:padding="10dp"
            android:background="@drawable/add_account_btn_design"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>